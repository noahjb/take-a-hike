{
    "compilerOptions": {
        "module": "commonjs",
        "baseUrl": "./server/",
        "outDir": "build",
        "target": "es6",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "lib": ["es6"],
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true
    },
    "include": [
        "server/**/**.ts",
        "server/**/**.tsx"
    ]
}
